<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <!-- Настройки для LiveCharts -->
      <dependentAssembly>
        <assemblyIdentity name="LiveCharts" publicKeyToken="0bc1f845d1ebb8df" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-0.9.7.0" newVersion="0.9.7.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="LiveCharts.Wpf" publicKeyToken="0bc1f845d1ebb8df" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-0.9.7.0" newVersion="0.9.7.0" />
      </dependentAssembly>
      <!-- Настройки для Newtonsoft.Json -->
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
    <!-- Указание платформы для загрузки библиотек .NET Framework -->
    <loadFromRemoteSources enabled="true" />
    <legacyCorruptedStateExceptionsPolicy enabled="true" />
    <gcConcurrent enabled="true" />
    <gcServer enabled="true" />
  </runtime>
</configuration> 